<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
                  prism:ViewModelLocator.AutowireViewModel="True"
                  x:Class="LOBApp.Views.MDPage">

    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout Padding="20">
                <Button Text="首頁" Command="{Binding HomeCommand}" />
                <Button Text="群組通訊清單" Command="{Binding UserGroupCommand}" />
                <Button Text="請假單" Command="{Binding LeaveFormCommand}" />
                <Button Text="登出" Command="{Binding LogoutCommand}" />
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    
</MasterDetailPage>